{
	"schemaVersion": 1,
	"id": "psis-crafting-tweaks",
	"version": "${version}",
	"name": "Recipe Tweaks",
	"description": "A lightweight Fabric mod that adds and modifies recipes in Minecraft",
	"authors": [
		"PsiTheGuy"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT",
	"icon": "assets/recipe-tweaks/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.psitheguy.recipetweaks.RecipeTweaks"
		],

		"client": [
			"net.psitheguy.recipetweaks.RecipeTweaksClient"
		],
		"fabric-datagen": [
			"net.psitheguy.recipetweaks.RecipeTweaksDataGenerator"
		]
	},
	"mixins": [
      "recipe-tweaks.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.15.7",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}